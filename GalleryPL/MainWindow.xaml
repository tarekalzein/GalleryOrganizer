<Window x:Class="GalleryPL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryPL"
        mc:Ignorable="d"
        Title="Photo Gallery"
        Height="850" Width="1300"
        Icon="Assets/GalleryIcon.png"
        WindowStartupLocation="CenterScreen"
        Background="#FF292929">
    <!--GalleryIcon made by www.flaticon.com/authors/pause08-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="253*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <TextBlock Text="Media Gallery" FontSize="38" Foreground="AliceBlue" FontWeight="DemiBold" VerticalAlignment="Center" Margin="10 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>

</Window>

