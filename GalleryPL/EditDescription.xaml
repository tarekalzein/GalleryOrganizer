<Window x:Class="GalleryPL.EditDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryPL"
        mc:Ignorable="d"
         Title="Edit Description" Height="207.964" Width="339.091" WindowStyle="ToolWindow" Background="#303030" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="description_txtbox"  TextWrapping="Wrap" MaxLength="150" Margin="10 10 10 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="ok_btn" Content="OK"  Width="87" Background="Transparent" Foreground="AliceBlue" Click="ok_btn_Click" Height="28"  Margin="10 0"/>
                <Button x:Name="cancel_btn" Content="Cancel"  Width="75" Background="Transparent" Foreground="AliceBlue" IsCancel="True" Click="cancel_btn_Click" Margin="10 0"/>

            </DockPanel>

        </Grid>
    </Grid>
</Window>
